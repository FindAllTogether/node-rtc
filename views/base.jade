								| Dropdown 
								span.caret
							ul.dropdown-menu
								li
									a(href='#') Action
								li
									a(href='#') Another action
								li
									a(href='#') Something else here
								li.divider(role='separator')
								li
									a(href='#') Separated link
		.container
			.row
				.col-md-12
					h1= title
			div(ng-view)
		script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js')
		script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-route.min.js')
		script(src="/scripts/modules/socket.min.js")
		script(src="/scripts/modules/ui-bootstrap-tpls-1.0.3.min.js")
		script(src="/scripts/main.js")
		script(src="/scripts/services/ChatServices.js")
		script(src="/scripts/controllers/ChatController.js")
		script(src="/scripts/controllers/PageController.js")
		script(src="/scripts/directives/ChatDirective.js")
		script(src='https://code.jquery.com/jquery-2.1.4.min.js')
